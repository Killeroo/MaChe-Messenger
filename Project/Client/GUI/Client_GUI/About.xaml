<Window x:Class="Client_GUI.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="152" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Label x:Name="lblTitle" Content="MaChe Messenger - Client" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="199,80,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click" IsDefault="True"/>
        <Label x:Name="lblVersion" Content="[v0.0]" HorizontalAlignment="Left" Margin="160,-2,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblBuild" Content="Build [v0.0.0.0]" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="lblBuildDate" Content="Built on 00.00.000 00:00" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label Content="Coded by Matthew Carney" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblEmail" Content="[matthewcarney64@gmail.com]" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" MouseDown="lblEmail_MouseDown"/>

    </Grid>
</Window>
